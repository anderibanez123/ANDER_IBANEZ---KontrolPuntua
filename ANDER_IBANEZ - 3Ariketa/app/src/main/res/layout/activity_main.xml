<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/azpe_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@mipmap/azpeitia_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/azko_BT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <ImageButton
        android:id="@+id/elgo_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:src="@mipmap/elgoibar_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/azpe_BT"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toEndOf="@+id/azko_BT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <ImageButton
        android:id="@+id/azko_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@mipmap/azkoitia_foreground" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="276dp"
        app:layout_constraintBottom_toTopOf="@+id/elgo_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@drawable/azkoitia" />

    <TextView
        android:id="@+id/titulua_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AZKOITIA"
        app:layout_constraintBottom_toTopOf="@+id/testua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/testua"
        android:layout_width="353dp"
        android:layout_height="291dp"
        android:text="Azkoitia Gipuzkoako barnealdeko herri bat da, Urola ibaiak sortzen duen haranean kokatuta dagoena. Haran hau altuera dexenteko mendiz inguratua dago, Gipuzkoako &quot;Arno-Tolosa&quot; antiklinorioaren hegoaldera dagoen apalunean, Urola ibaiak harri bigunen artean egindako ildo edo bidean. Ibaiaren alde hori izan ezik, gainontzeko zatia menditsua da eta horien artean Izarraitz (942 m.) eta Azkarate (628 m.) mendiak ditugu nagusi iparraldera; hegoaldera, berriz, lurrak pixkanaka igotzen doaz, esan berri ditugun altueretara heldu arte, halanola Hirumugarri tontorrean (939 m.), Hirukurutzeta mendilerroan (895 m.)."
        app:layout_constraintBottom_toTopOf="@+id/elgo_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.387" />
</androidx.constraintlayout.widget.ConstraintLayout>